{
	// Google Extension Manifest Version
	"manifest_version": 2,

	"name": "Cozy Page Width",
	"description": "For when a website's text runs across the screen, problematic on larger displays. One click to adjust the width of an article for a more natural news column/paperback reading feel.",
	"version": "0.2",
	// Extension Icon
	"icons": {
        "16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
    },

	// Toolbar
	"browser_action": {
        "default_title": "Adjust the page margins to improve readability."
    },

	// Context scripts can read or modify the details of a webpage
	"content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],

	"permissions": [
		"activeTab",
		"http://*/*"
	],

	"background": {
        "page": "background.html"
    }
}
